#!/bin/bash
# dev_ops Global Wrapper
# This script delegates to the python bootstrap script in the repo.

# Resolve the directory where this symlink/script is located
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
  DIR="$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
BIN_DIR="$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )"
REPO_ROOT="$(dirname "$BIN_DIR")"

# Execute the setup script
# We use 'python3' assuming it is available in the user's environment.
python3 "$REPO_ROOT/scripts/setup_ops.py" "$@"

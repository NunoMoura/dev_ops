{
  "name": "dev-ops",
  "displayName": "DevOps Framework",
  "icon": "resources/devops-logo.png",
  "description": "Kanban board + DevOps workflows for AI-assisted development",
  "publisher": "NunoMoura",
  "repository": {
    "type": "git",
    "url": "https://github.com/NunoMoura/dev_ops"
  },
  "version": "0.1.0-dev",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devops.initialize",
        "title": "DevOps: Initialize"
      },
      {
        "command": "kanban.importPlan",
        "title": "DevOps: Import Plan"
      },
      {
        "command": "kanban.openBoard",
        "title": "DevOps: Open Board"
      },
      {
        "command": "kanban.pickNextTask",
        "title": "DevOps: Pick Next Task"
      },
      {
        "command": "kanban.showTaskDetails",
        "title": "DevOps: Show Task Details"
      },
      {
        "command": "kanban.getTasks",
        "title": "DevOps: Export Board"
      },
      {
        "command": "kanban.createColumn",
        "title": "DevOps: Create Column"
      },
      {
        "command": "kanban.renameColumn",
        "title": "DevOps: Rename Column"
      },
      {
        "command": "kanban.deleteColumn",
        "title": "DevOps: Delete Column"
      },
      {
        "command": "kanban.createTask",
        "title": "DevOps: Create Task",
        "icon": "$(add)"
      },
      {
        "command": "kanban.moveTask",
        "title": "DevOps: Move Task"
      },
      {
        "command": "kanban.filterTasks",
        "title": "DevOps: Search Tasks",
        "icon": "$(search)"
      },
      {
        "command": "kanban.clearTaskFilter",
        "title": "DevOps: Clear Filters"
      },
      {
        "command": "kanban.markTaskInProgress",
        "title": "DevOps: Mark In Progress"
      },
      {
        "command": "kanban.markTaskBlocked",
        "title": "DevOps: Mark Blocked"
      },
      {
        "command": "kanban.markTaskDone",
        "title": "DevOps: Mark Done"
      },
      {
        "command": "kanban.viewTaskHistory",
        "title": "DevOps: View Task History"
      },
      {
        "command": "kanban.openEntryPoints",
        "title": "DevOps: Open Entry Points"
      },
      {
        "command": "kanban.openTaskContext",
        "title": "DevOps: Open Task Context"
      },
      {
        "command": "kanban.openSettings",
        "title": "DevOps: Preferences",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devops",
          "title": "DevOps",
          "icon": "resources/kanban-icon.svg"
        }
      ]
    },
    "views": {
      "devops": [
        {
          "id": "devopsTasksView",
          "name": "Tasks"
        },
        {
          "id": "devopsDocsView",
          "name": "Docs"
        },
        {
          "id": "devopsMetricsView",
          "name": "Metrics",
          "type": "webview"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "kanban.taskEditor",
        "displayName": "Kanban Task Editor",
        "selector": [
          {
            "filenamePattern": "*.kanban-task"
          }
        ],
        "priority": "default"
      }
    ],
    "menus": {
      "viewContainer/title": [
        {
          "command": "kanban.openSettings",
          "when": "viewContainer == devops",
          "group": "navigation"
        }
      ],
      "view/title": [],
      "view/item/context": []
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
{
  "name": "dev-ops",
  "displayName": "DevOps Framework",
  "icon": "resources/devops-logo.png",
  "description": "Board-based DevOps workflows for AI-assisted development",
  "publisher": "NunoMoura",
  "repository": {
    "type": "git",
    "url": "https://github.com/NunoMoura/dev_ops"
  },
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "devops",
        "required": [
          "taskId"
        ],
        "properties": {
          "taskId": {
            "type": "string",
            "description": "DevOps task ID (e.g., TASK-001)"
          },
          "title": {
            "type": "string",
            "description": "Task title"
          },
          "columnId": {
            "type": "string",
            "description": "Board column ID"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "devops.initialize",
        "title": "DevOps: Initialize"
      },
      {
        "command": "devops.importPlan",
        "title": "DevOps: Import Plan"
      },
      {
        "command": "devops.openBoard",
        "title": "DevOps: Open Board"
      },
      {
        "command": "devops.pickNextTask",
        "title": "DevOps: Pick Next Task"
      },
      {
        "command": "devops.refreshBoard",
        "title": "DevOps: Refresh Board",
        "icon": "$(refresh)"
      },
      {
        "command": "devops.showTaskDetails",
        "title": "DevOps: Show Task Details"
      },
      {
        "command": "devops.getTasks",
        "title": "DevOps: Export Board"
      },
      {
        "command": "devops.createColumn",
        "title": "DevOps: Create Column"
      },
      {
        "command": "devops.renameColumn",
        "title": "DevOps: Rename Column"
      },
      {
        "command": "devops.deleteColumn",
        "title": "DevOps: Delete Column"
      },
      {
        "command": "devops.createTask",
        "title": "DevOps: Create Task",
        "icon": "$(add)"
      },
      {
        "command": "devops.moveTask",
        "title": "DevOps: Move Task"
      },
      {
        "command": "devops.filterTasks",
        "title": "DevOps: Search Tasks",
        "icon": "$(search)"
      },
      {
        "command": "devops.clearTaskFilter",
        "title": "DevOps: Clear Filters"
      },
      {
        "command": "devops.markTaskInProgress",
        "title": "DevOps: Mark In Progress"
      },
      {
        "command": "devops.markTaskBlocked",
        "title": "DevOps: Mark Blocked"
      },
      {
        "command": "devops.markTaskDone",
        "title": "DevOps: Mark Done"
      },
      {
        "command": "devops.viewTaskHistory",
        "title": "DevOps: View Task History"
      },
      {
        "command": "devops.openEntryPoints",
        "title": "DevOps: Open Entry Points"
      },
      {
        "command": "devops.openTaskContext",
        "title": "DevOps: Open Task Context"
      },
      {
        "command": "devops.openSettings",
        "title": "DevOps: Preferences",
        "icon": "$(gear)"
      },
      {
        "command": "devops.setStatus",
        "title": "DevOps: Set Task Status"
      },
      {
        "command": "devops.claimTask",
        "title": "DevOps: Claim Task"
      },
      {
        "command": "devops.refreshAgent",
        "title": "DevOps: Refresh Agent View",
        "icon": "$(refresh)"
      },
      {
        "command": "devops.spawnAgent",
        "title": "DevOps: Spawn Agent",
        "icon": "$(play)"
      },
      {
        "command": "devops.nextPhase",
        "title": "DevOps: Next Phase",
        "icon": "$(arrow-right)"
      },
      {
        "command": "devops.retryPhase",
        "title": "DevOps: Retry Phase",
        "icon": "$(debug-restart)"
      },
      {
        "command": "devops.refinePhase",
        "title": "DevOps: Refine Phase",
        "icon": "$(edit)"
      },
      {
        "command": "devops.deleteTask",
        "title": "DevOps: Delete Task",
        "icon": "$(trash)"
      },
      {
        "command": "devops.launchAntigravitySession",
        "title": "Start Session",
        "icon": "$(robot)"
      },
      {
        "command": "devops.launchCursorSession",
        "title": "Start Session",
        "icon": "$(terminal)"
      },
      {
        "command": "devops.insertTaskInCommit",
        "title": "DevOps: Insert Task ID in Commit Message",
        "icon": "$(git-commit)"
      },
      {
        "command": "devops.startAgentSession",
        "title": "Start Agent Session",
        "icon": "$(play)"
      }
    ],
    "configuration": {
      "title": "DevOps Framework",
      "properties": {
        "devops.autoOpenBoard": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open board when workspace opens"
        },
        "devops.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens annotations for task references (TASK-XXX) in files"
        },
        "devops.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Enable success notifications for automatic framework updates"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devops",
          "title": "DevOps",
          "icon": "resources/devops-icon.svg"
        }
      ]
    },
    "views": {
      "devops": [
        {
          "id": "devopsStatusBoard",
          "name": "BOARD",
          "icon": "resources/devops-logo.png",
          "type": "webview"
        },
        {
          "id": "devopsMetricsView",
          "name": "METRICS",
          "icon": "$(graph)",
          "type": "webview",
          "visibility": "collapsed"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "devops.taskEditor",
        "displayName": "Board Task Editor",
        "selector": [
          {
            "filenamePattern": "*.board-task"
          }
        ],
        "priority": "default"
      }
    ],
    "menus": {
      "view/title": [],
      "view/item/context": []
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "dist": "pnpm run package && npx @vscode/vsce package --no-dependencies",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "coverage": "c8 --check-coverage --lines 50 pnpm run test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "c8": "^9.1.0",
    "commander": "^14.0.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "fast-glob": "^3.3.3",
    "npm-run-all": "^4.1.5",
    "sharp": "^0.34.5",
    "sinon": "^17.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}